          <li class="nav-item">
            <a class="nav-link" href="<%= pending_participations_path %>">Your Events</a>
          </li>
          <li class="nav-item dropdown">
            <img class="avatar-square dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://res.cloudinary.com/dneopsx5s/image/upload/v1723579182/icons8-user-menu-male-50_gaehpv.png" />
